<style>
  section > h1 {
    animation: revealing;
    animation-duration: 200ms;
  }
  .animate_cards {
    animation: revealing_cards;
    animation-duration: 1s;
  }
  @keyframes revealing_cards {
    0% {
      opacity: 0;
      transform: translate3d(0, 100%, 0);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }
</style>
<script>
  const observer = new IntersectionObserver((entries) => {
    // Recorrer las entradas recibidas
    entries.forEach((entry) => {
      // Está visible en el viewport
      if (entry.intersectionRatio > 0) {
        // entry.target es el elemento que se está observando
        // Agregar la clase para animar
        entry.target.classList.add("animate_cards");
        // Dejar de observar
        observer.unobserve(entry.target);
      }
    });
  });
  // Observar elemento a animar
  const element = document.getElementById("simbols-section")
  observer.observe(element as HTMLElement);
</script>