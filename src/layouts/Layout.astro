---
import Navbar from "../components/Navigation/navbar.astro";
import Footer from "../components/Navigation/footer.astro";
import ToTopBtn from "../components/Utils/toTopBtn.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Bienvenidos a la institucion educativa marice sinisterra encuentra informacion importante sobre el colegio en la web!">
		<title>{title}</title>
	</head>
	<body class="conteiner-principal">
		<Navbar />
		<main>
			<slot />
		</main>
		<ToTopBtn />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: Arial, Helvetica, sans-serif;
		display: block;
	}
</style>
<style>
	.conteiner-principal {
		min-height: 100vh;
		display: grid;
		grid-template-rows: auto 1fr auto;
	}
</style>
